<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;700&display=swap" rel="stylesheet">
        <title>Pets-R-Us</title>
        <link rel="stylesheet" href="/styles/site.css">
    </head>

    <body>
        <!-- Header Partial -->
        <%- include('_header') %>
            <section class="container">
                <div class="card center-div">

                    <div class="card-title">

                    </div>
                    <div class="card-content">
                        <h1 class="center-text">Book Appointment</h1>

                        <div class="form">
                            <form action="/appointment" method="post">

                                <div class="form-field">
                                    <label for="customerId">Customer ID</label><br />
                                    <input class="input" type="text" name="customerId" id="customerId" required autofocus>
                                </div>

                                <div class="form-field">
                                    <label for="firstName">First Name</label><br />
                                    <input class="input" type="text" name="firstName" id="firstName" required>
                                </div>

                                <div class="form-field">
                                    <label for="lastName">Last Name</label><br />
                                    <input class="input" type="text" name="lastName" id="lastName" required>
                                </div>

                                <div class="form-field">
                                    <label for="email">Email</label><br />
                                    <input class="input" type="email" name="email" id="email" required>
                                </div>

                                <div class="form-field">
                                    <label for="service">Service</label><br />
                                    <select name="service" id="service" class="drop-down-menu full-width" required>
                                        <% services.forEach((service)=> { %>
                                            <option value="<%= service.value %>">
                                                <%= service.text %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>

                                <div class="form-field">
                                    <input type="submit" value="Book Appointment" class="btn btn-primary full-width">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Footer Partial -->
            <%- include('_footer') %>
    </body>

</html>